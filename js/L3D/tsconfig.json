{
    "compilerOptions" : {
        "module":"commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir":"../../build",
        "sourceMap": true,
        "declaration":true,
        "rootDir":"./"
    },
    "filesGlob":[
        "./*.ts",
        "./d.ts/*.ts",
        "./d.ts/*/*.ts",
        "./typings/*/*.d.ts",
        "./typings/threejs/*.d.ts",
        "./typings/*.d.ts"
    ]
}
