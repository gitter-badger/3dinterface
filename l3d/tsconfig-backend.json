{
    "compilerOptions" : {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir":"./build",
        "sourceMap": true,
        "declaration":true,
        "rootDir":"./"
    },
    "exclude":[
        "node_modules",
        "build"
    ],
    "filesGlob":[
        "./*.ts",
        "./typings/*.d.ts",
        "./typings/*/*.d.ts"
    ]
}
