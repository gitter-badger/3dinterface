{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/",
        "sourceMap": true,
        "noEmitOnError":true
    },
    "exclude": [
        "node_modules",
        "build",
        "views",
        "static",
        "typings/typings/browser",
        "typings/typings/browser.d.ts"
    ],
    "filesGlob": [
        "./typings/*.d.ts"
    ]
}
